{
  "modules": {
    "pulseaudio": {
      "max_volume": 150,
      "increase": 10,
      "decrease": 10
    },
    "joystick": {
      "read_buttons_interval": 200,
      "keybindings": [
        {
          "delay": 500,
          "keybing": ["L1", "R1"],
          "action": "Window::Main"
        },
        {
          "delay": 1000,
          "keybinding": ["L1 + Circle"],
          "action": "ShellScript('~/local/bin/record_obs.sh')"
        }
      ]
    },
    "clock": {
      "update_interval": 1000,
      "format": "%H:%M:%S"
    }
  }
}
